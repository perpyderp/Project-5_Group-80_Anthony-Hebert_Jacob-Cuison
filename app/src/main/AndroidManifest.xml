<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="project_5.android_activities">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/donut_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".OrderDonutsActivity">
            android:label = "@string/order_donuts"
            android:parentName = ".MainMenuActivity"
        </activity>
        <activity android:name=".OrderCoffeeActivity">
            android:label = "@string/order_coffee"
            android:parentName = ".MainMenuActivity"
        </activity>
        <activity android:name=".CurrentOrderDetailActivity">
            android:label = "@string/current_order"
            android:parentName = ".MainMenuActivity"
        </activity>
        <activity android:name=".StoreOrdersActivity">
            android:label = "@string/store_orders"
            android:parentName = ".MainMenuActivity"
        </activity>
    </application>

</manifest>